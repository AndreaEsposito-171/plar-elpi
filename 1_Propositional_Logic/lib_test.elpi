%%% ===========================================================================
%%% Tests for lib.
%%% ===========================================================================

accumulate lib.
accumulate testing.

%%% ---------------------------------------------------------------------------
%%% Accessory definitions.
%%% ---------------------------------------------------------------------------

pred fun i:int, o:bool.
fun 0 tt.
fun 1 ff.
fun 2 tt.

%%% ---------------------------------------------------------------------------
%%% Run tests.
%%% ---------------------------------------------------------------------------

shorten testing.{ run-tests, ok, ko, okb, kob, ok-eq, section }.

main :-
    with-verbosity quiet (run-tests
    [ section "forallb"
    , okb (forallb [0, 2] fun)
    , kob (forallb [0, 1] fun)
    , section "existsb"
    , okb (existsb [0, 1] fun)
    , kob (existsb [1] fun)
    % , okb (existsb [1] fun)   % To see an example of failure.
    ]).

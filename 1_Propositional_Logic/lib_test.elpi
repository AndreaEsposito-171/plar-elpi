%%% ===========================================================================
%%% Tests for lib.
%%% ===========================================================================

accumulate "lib".

%%% ---------------------------------------------------------------------------
%%% Accessory definitions.
%%% ---------------------------------------------------------------------------

pred fun i:int, o:bool.
fun 0 tt.
fun 1 ff.
fun 2 tt.

%%% ---------------------------------------------------------------------------
%%% Run tests.
%%% ---------------------------------------------------------------------------

main :-
    run_tests
    [ report "forallb"
    , ok_eq tt (forallb [0, 2] fun)
    , ok_eq ff (forallb [0, 1] fun)
    , report "existsb"
    , ok_eq tt (existsb [0, 1] fun)
    , ok_eq ff (existsb [1] fun)
    ].

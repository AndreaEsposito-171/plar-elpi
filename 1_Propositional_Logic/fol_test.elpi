accumulate "fol".

%%% ---------------------------------------------------------------------------
%%% Tests.
%%% ---------------------------------------------------------------------------

type x, y term.

copy_term X X :- std.mem! [x,y] X, !.

eval (rel "R" [x]) tt.
eval (rel "R" [y]) ff.
eval (rel "T"  _ ) ff.

pred domain o:list term.
domain [x,y].

main :-
      domain D
    , ok(holds (rel "R" [x]) D)
    , ko(holds (rel "R" [y]) D)
    , ko(holds (rel "T" [x]) D)
    , ok(holds (rel "T" [x] !! rel "R" [x]) D)
    , ko(holds (rel "T" [x] && rel "R" [x]) D)
    , ok(holds (rel "R" [y] !! rel "R" [x]) D)
    , ko(holds (rel "R" [y] && rel "R" [x]) D)
    , ok(holds/c (ctx a\ formula/c(rel "R" [a] !! rel "R" [x])) D)
    , ko(holds/c (ctx a\ formula/c(rel "R" [a] && rel "R" [x])) D)
    .

%%% ===========================================================================
%%% Boolean interpretation.
%%% ===========================================================================

accumulate "fol".

%%% ---------------------------------------------------------------------------
%%% Language.
%%% ---------------------------------------------------------------------------

type zero, one term.
type add, mul term -> term -> term.
type eq term -> term -> formula.

%%% ---------------------------------------------------------------------------
%%% Model.
%%% ---------------------------------------------------------------------------

domain [ff, tt].

pred termval i:term, o:bool.
termval zero ff.
termval one tt.
termval (add X Y) B :- orb  {termval X} {termval Y} B.
termval (mul X Y) B :- andb {termval X} {termval Y} B.

holds (eq X Y) B :- iffb {termval X} {termval Y} B.

main :-
    run_tests
    [ ok_eq tt (holds/c (ctx X\ ctx Y\ formula/c (eq (add X Y) (add Y X))))
    ].
